{
    "python.defaultInterpreterPath": "${env:HOME}/venv/bin/python",    
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src"
    ],
    "python.analysis.autoSearchPaths": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic", // for Pylance type checking

    //"python.linting.enabled": true,
    //"python.linting.flake8Enabled": true, // use flake8 instead of pylint
    //"python.linting.pylintEnabled": false,
    "pylance.insidersChannel": "off",


    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "string.quoted.docstring.multi.python",
                "settings": {
                    "foreground": "#4A7C59",  // 6A9955 normal Green color
                    "fontStyle": ""
                }
            }
        ]
    }
}