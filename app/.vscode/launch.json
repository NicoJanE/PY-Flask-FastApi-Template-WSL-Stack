{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Flask App",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/app.py",

      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Profile Flask App",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/app.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "FLASK_PROFILE": "true"
      }
    }
  ]
}